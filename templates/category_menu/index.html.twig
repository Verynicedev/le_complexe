{% extends 'base.html.twig' %}

{% block title %}CategoryMenu index{% endblock %}

{% block body %}
    <h1>CategoryMenu index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category_menu in category_menus %}
            <tr>
                <td>{{ category_menu.id }}</td>
                <td>{{ category_menu.nom }}</td>
                <td>{{ category_menu.image }}</td>
                <td>
                    <a href="{{ path('category_menu_show', {'id': category_menu.id}) }}">show</a>
                    <a href="{{ path('category_menu_edit', {'id': category_menu.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_menu_new') }}">Create new</a>
{% endblock %}
