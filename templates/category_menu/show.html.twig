{% extends 'category_tarif/base.html.twig' %}

{% block title %}CategoryMenu{% endblock %}

{% block body %}
    <div class="pt-2 mt-2">
        <h2 class="pt-5 mt-5 text-center ">Vue categorie de menu</h2>
    </div>

<div class="pt-2">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category_menu.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category_menu.nom }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ category_menu.image }}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="pl-5">
    <div class="pb-2 w-75">
        <a href="{{ path('category_menu_edit', {'id': category_menu.id}) }}" class="btn btn-primary">Modifer</a>
    </div>
    <div>
        {{ include('category_menu/_delete_form.html.twig') }}
    </div>
</div>
<hr>
<div class="p-3">
    <a href="{{ path('category_menu_index') }}" class="btn btn-primary">Retour</a>
</div>

{% endblock %}
