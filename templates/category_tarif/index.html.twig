{% extends 'category_tarif/base.html.twig' %}

{% block title %}CategoryTarif index{% endblock %}

{% block body %}
    <div class="pt-2 mt-2">
        <h2 class="pt-5 mt-5 text-center ">Liste des catégories de tarifs</h2>
    </div>

    <table class="table">
        <thead>
            <tr class="bg-primary text-white">
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category_tarif in category_tarifs %}
            <tr>
                <td>{{ category_tarif.id }}</td>
                <td>{{ category_tarif.nom }}</td>
                <td>
                    {# <a href="{{ path('category_tarif_show', {'id': category_tarif.id}) }}" class="btn btn-primary text-white">show</a> #}
                    <a href="{{ path('category_tarif_edit', {'id': category_tarif.id}) }}" class="btn btn-primary text-white">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr>
    <div class="p-3"> 
    <a href="{{ path('category_tarif_new') }}" class="btn btn-primary text-white">Nouveau</a>
    </div>
{% endblock %}
