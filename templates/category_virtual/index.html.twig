{% extends 'category_tarif/base.html.twig' %}

{% block title %}CategoryVirtual index{% endblock %}

{% block body %}
    <div class="pt-2 mt-2">
        <h2 class="pt-5 mt-5 text-center ">Liste des catégories de jeux VR</h2>
    </div>

    <table class="table">
        <thead>
            <tr class="bg-primary text-white">
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category_virtual in category_virtuals %}
            <tr>
                <td>{{ category_virtual.id }}</td>
                <td>{{ category_virtual.nom }}</td>
                <td>
                    {# <a href="{{ path('category_virtual_show', {'id': category_virtual.id}) }}">show</a> #}
                    <a class="btn btn-primary text-white" href="{{ path('category_virtual_edit', {'id': category_virtual.id}) }}"class="btn btn-primary text-white">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="p-3">
    <a class="btn btn-primary text-white" href="{{ path('category_virtual_new') }}">Nouveau</a>
    </div>
{% endblock %}
