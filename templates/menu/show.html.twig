{% extends 'category_tarif/base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <div class="pt-2 mt-2">
        <h2 class="pt-5 mt-5 text-center ">Vue liste de menu</h2>
    </div>

<div class="pt-2">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ menu.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ menu.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ menu.image }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ menu.prix }}</td>
            </tr>
        </tbody>
    </table>
</div>
        <div class="pl-5">
        <div class="pb-2 w-75">
            <a href="{{ path('menu_edit', {'id': menu.id}) }}" class="btn btn-primary">Modifer</a>
        </div>
        <div>
            {{ include('menu/_delete_form.html.twig') }}
        </div>
    </div>
    <hr>
    <div class="p-3">
        <a href="{{ path('menu_index') }}" class="btn btn-primary">Retour</a>
    </div>

{% endblock %}
