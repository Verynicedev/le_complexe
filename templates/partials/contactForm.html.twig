<!-- Contact -->
<div id="contact" class="pt-5 pb-5 w-50">
    <h2 class="text-center mb-3">Contactez-nous</h2>
    
    {{ form_start(form) }}
    <div class="border rounded shadow pb-2 pt-2 col-12 col-sm-10 col-md-7 col-lg-6 col-xl-3 m-auto text-center">
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.message) }}
        <input type="submit" name="submit" value="Envoyez" class="btn btn-success">
    </div>
    {{ form_end(form) }}
</div>
<!-- End Contact -->