{% extends 'realitevirtuelle/base.html.twig' %}

{% block title %}Catégorie VR - Le Complexe{% endblock %}

{% block body %}
<main class="bg-primary vrpage">

    <div class="header-vr d-flex align-items-center justify-content-center">
        <div class=" mx-auto w-100 bg-title-vr">
            <h1 class="text-white text-center p-3 display-4"> Réalité Virtuelle </h1>
            <p class="text-white text-center p-3 vrsubtitle h3 font-weight-light"> Vivre de nouvelles expériences </p>
        </div>
    </div>
    
    <div class="body-laser text bg-primary  container-fluid">
        <div class="bg-primary py-5">
            <h2 class="card-header titlecatvr sdw my-3 text-center text-white">Choisir une catégorie</h2>
            <div class="row">
                {% for category in categories %}
                <div class="col-10 col-sm-10 col-md-10 col-lg-5 col-xl-5 text-center mt-5 mx-auto  divcatlaser">
                    <div class="card pt-5 mb-3 bg-secondary  bgImgVirtual" style="--bg:url(../{{ category.image }})">
                        <h3 class="card-header titlecatvr sdw text-light">{{ category.nom }}</h3>
                        <div class="card-body d-flex flex-column-reverse col-6 mx-auto">
                            <a href="{{ url('categoryVR',{id:category.id}) }}" class="card-link btn btn-block titlecatvr sdw rounded text-light">Choisir</a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
                <div class="row pt-5">
        <div class="col-3">
            <a class="card-link btn titlecatvr sdw rounded text-light" href="{{ path('realitevirtuelle') }}">Retour</a>
        </div>
    </div>
</main>
{% endblock %}


  

