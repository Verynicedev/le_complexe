{% extends 'category_tarif/base.html.twig' %}

{% block title %}Tarif index{% endblock %}

{% block body %}
    <div class="pt-2 mt-2">
        <h2 class="pt-5 mt-5 text-center ">Liste des tarifs</h2>
    </div>

    <table class="table">
        <thead>
            <tr  class="bg-primary text-white">
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix1</th>
                <th>Prix2</th>
                <th>Prix3</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tarif in tarifs %}
            <tr>
                <td>{{ tarif.id }}</td>
                <td>{{ tarif.nom }}</td>
                <td>{{ tarif.description }}</td>
                <td>{{ tarif.prix1 }}</td>
                <td>{{ tarif.prix2 }}</td>
                <td>{{ tarif.prix3 }}</td>
                <td>
                    {# <a href="{{ path('tarif_show', {'id': tarif.id}) }}" class="btn btn-primary text-white">show</a> #}
                    <a href="{{ path('tarif_edit', {'id': tarif.id}) }}" class="btn btn-primary text-white">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr>
    <div class="p-3"> 
    <a href="{{ path('tarif_new') }}" class="btn btn-primary text-white">Create new</a>
    </div>
{% endblock %}
